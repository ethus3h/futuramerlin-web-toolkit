#!/usr/bin/env bash
#set -x

rm support/.{prefix mandir infodir datadir sysconfdir localstatedir}

currentArgPrefix=""
while [[ -n "$1" ]]; do
    currentArgPrefix="${1%%=*}"
    case $currentArgPrefix in
    --prefix)
        printf '%s' "${1#*=}" > support/.prefix
        ;;
    --mandir)
        printf '%s' "${1#*=}" > support/.mandir
        ;;
    --infodir)
        printf '%s' "${1#*=}" > support/.infodir
        ;;
    --datadir)
        printf '%s' "${1#*=}" > support/.datadir
        ;;
    --sysconfdir)
        printf '%s' "${1#*=}" > support/.sysconfdir
        ;;
    --localstatedir)
        printf '%s' "${1#*=}" > support/.localstatedir
        ;;
    *)
        true
        ;;
    esac
    shift
done
