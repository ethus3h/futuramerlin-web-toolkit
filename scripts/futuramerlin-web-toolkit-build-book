#!/usr/bin/env bash
# shellcheck disable=SC1091
source ember_bash_setup &> /dev/null || { printf '%b' '\033[1;31m' >&2; echo "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd): The required dependency ember-shared could not be found (or ember_bash_setup could not be sourced for some other reason)." >&2; printf '%b' '\033[0m' >&2; exit 1; }
#set -x

trap 'die "A fatal error was reported on ${BASH_SOURCE[0]} line ${LINENO} in $(pwd) at $(emdate)."' ERR

bookConf="fmwtk-book.conf"
if [[ -n "$1" ]]; then
    bookConf="$(basename "$(readlink -f "$1")")"
    shift
else
    bookConf="$(basename "$(readlink -f "$bookConf")")"
fi

cd "$(dirname "$bookConf")" || die "cd failed"

bookName="${bookConf/-fmwtk-book.conf}"

rm -r "$bookName.fmwtk-book"
mkdir "$bookName.fmwtk-book"

out="$bookName.fmwtk-book/$bookName-book-$(emdate).htm"
touch "$out"

targets=(htm)
targetCount="${#targets[@]}"
for (( i=0; i<targetCount; i++ )); do
    while IFS= read -r -d '' currentPage; do
        depth="${currentPage/ *}"
        page="${currentPage#* }"
        if [[ "$depth" == "-1" ]]; then
            cat "$currentPage.htm" >> "$out"
        else
            htmlHeadingDepth=$((depth + 1))
            echo 
        fi
    done < "$bookConf"
done
